<div class="users-new-wrapper">
  <body>
  <div class="container">
    <div class="row">
      <div class="col-md-offset-4 col-md-4 users-new-container">
        <h2 class="text-center text-black">ユーザー登録</h2>
        <%= form_for @user do |f| %>
          <div class="form-group">
            <%= f.label :お名前, class: 'text-black' %>
            <%= f.text_field :name, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= f.label :メールアドレス, class: 'text-black' %>
            <%= f.text_field :email, class: 'form-control' %>
          </div>
           <div class="form-group">
            <%= f.label :パスワード, class: 'text-black' %>
            <%= f.password_field :password, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= f.label :'パスワード(再確認)', class: 'text-black' %>
            <%= f.password_field :password_confirmation, class: 'form-control' %>
          </div>

          <%= f.submit "Enter", class: 'btn-block btn-white' %>
        <% end %>
        <%= link_to 'ログインはこちら', login_path, class: 'text-black' %>
      </div>
    </div>
  </div>
  </body>
</div>
