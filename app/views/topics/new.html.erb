<div class="topic-new-wrapper" >
  <div class="container">
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <h2 class="text-center">体験を共有しましょう！</h2><br>
        <%= form_for @topic do |f| %>
          <div class="form-group">
            <%= f.label :画像 %>
            <%= f.file_field :image%>
          </div>

          <div class="form-group">
            <%= f.label :タイトル %>
            <%= f.text_area :description, class: 'form-control' %>
          </div>
          
          <div class="form-group">
            <%= f.label :本文 %>
            <%= f.text_area :experience, class: 'form-control' %>
          </div>

          <%= f.submit '投稿', class: 'btn btn-black btn-block' %>

        <% end %>
      </div>
    </div>
  </div>
</div>
