<div class="topic-index-wrapper">
  <div class="container">
    <% @topics.each do |topic| %>
      <div class="row">
        <div class="col-md-6 col-md-offset-3">
          <div class="topic-index-single">
            <h2 class="topic-author">
              <%= topic.user.name %>
            </h2>
              <p class="topic-text">
              <%= topic.description %>
              </p>
                <%= image_tag topic.image.url %>
              <p class="topic-text">
              <%= topic.experience %>
              </p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>